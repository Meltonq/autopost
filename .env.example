# Telegram
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHANNEL_ID=@your_channel_or_id
ADMIN_CHAT_ID=123456789
COMMANDS_ENABLED=true

# Theme
BOT_THEME=default
THEMES_DIR=./src/themes

# Time & schedule
BOT_TIMEZONE=Europe/Helsinki
ACTIVE_HOURS_START=7
ACTIVE_HOURS_END=23
SEND_TEST_ON_START=false

MAIN_SCHEDULE_MODE=hourly # hourly | hours | daily | off
MAIN_POST_TIME=12:00
MAIN_POST_HOURS=8,12,18
MAIN_POST_MINUTE=0

# Daily extra rubric
DAILY_RUBRIC_ENABLED=false
DAILY_RUBRIC_NAME=Daily Energy
DAILY_RUBRIC_TIME=08:30
DAILY_RUBRIC_TONE=спокойный

# LLM provider
LLM_PROVIDER=genapi # genapi (optional, auto if keys present)
LLM_TEMPERATURE=0.85
LLM_TOP_P=0.9
LLM_MAX_TOKENS=600
LLM_TIMEOUT_MS=60000

# GENAPI (optional)
GENAPI_API_KEY=
GENAPI_ENDPOINT=https://api.gen-api.ru/api/v1/networks/qwen-3
GENAPI_MODEL=qwen-plus

# Images
IMAGE_MODE=auto # auto | local | unsplash | off
USE_UNSPLASH=false
UNSPLASH_ACCESS_KEY=
UNSPLASH_APP_NAME=universal-bot
UNSPLASH_ORIENTATION=portrait
UNSPLASH_CONTENT_FILTER=high
UNSPLASH_IMG_W=1280
UNSPLASH_IMG_Q=80
UNSPLASH_QUERY_DEFAULT=minimal calm

IMAGES_DIR=./images
DATA_DIR=./data
TG_MAX_PHOTO_BYTES=1900000
VALIDATION_REPORT_INTERVAL_MS=86400000
